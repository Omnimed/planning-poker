<% @params =  j render('dashboard/stories/vote', story_id: @resource[:story_id],
      vote: nil, user: @resource[:user], reveal: false) %>

publish('/planning-poker/story/reset-vote', "if ($('.user-vote[data-vote=\"<%= @resource[:story_id] %>-<%= @resource[:user] %>\"]').length) {" +
    "$('.user-vote[data-vote=\"<%= @resource[:story_id] %>-<%= @resource[:user] %>\"]').remove();" +
  "}" +

  "$('#cards-<%= @resource[:story_id] %> ul').append(" +
    "\"<%= j @params.html_safe %>\"" +
  ");" +

  "$('#form-<%= @resource[:story_id] %>').find('input#estimate').val('');" +

  "$('#vote-<%= @resource[:story_id] %> .reveal').attr('disabled','disabled');")
